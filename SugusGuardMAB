||supportmetrics.apple.com^$dnsrewrite=REFUSED;;,important
||*-analytics-events.apple.com^$dnsrewrite=REFUSED;;,important
||*-analytics-events.news.apple-dns.net^$dnsrewrite=REFUSED;;,important
||idiagnostics.apple.com^$dnsrewrite=REFUSED;;,important
