||mesu.apple.com.edgekey.net^$dnsrewrite=NXDOMAIN;;,important
||mesu.g.aaplimg.com^$dnsrewrite=NXDOMAIN;;,important
||gdmf.apple.com^$dnsrewrite=NXDOMAIN;;,important
||gdmf.apple.com.akadns.net^$dnsrewrite=NXDOMAIN;;,important
||ocsp.apple.com^$dnsrewrite=NXDOMAIN;;,important
||ocsp-lb.apple.com.akadns.net^$dnsrewrite=NXDOMAIN;;,important
||ocsp-a.g.aaplimg.com^$dnsrewrite=NXDOMAIN;;,important
||ocsp2.apple.com^$dnsrewrite=NXDOMAIN;;,important
||ocsp2-lb.apple.com.akadns.net^$dnsrewrite=NXDOMAIN;;,important
||ocsp2.g.aaplimg.com^$dnsrewrite=NXDOMAIN;;,important
||updates-http.cdn-apple.com^$dnsrewrite=NXDOMAIN;;,important
||gg.apple.com^$dnsrewrite=NXDOMAIN;;,important
||gs.apple.com^$dnsrewrite=NXDOMAIN;;,important
||ns.itunes.apple.com^$dnsrewrite=NXDOMAIN;;,important
||configuration.apple.com.akadns.net^$dnsrewrite=NXDOMAIN;;,important
||configuration.apple.com.edgekey.net^$dnsrewrite=NXDOMAIN;;,important
