||mesu.apple.com.edgekey.net^$dnsrewrite=REFUSED;;,important
||mesu.g.aaplimg.com^$dnsrewrite=REFUSED;;,important
||gdmf.apple.com^$dnsrewrite=REFUSED;;,important
